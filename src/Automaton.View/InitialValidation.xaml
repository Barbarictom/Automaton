<UserControl
    x:Class="Automaton.View.InitialValidation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Automaton.ViewModel;assembly=Automaton.ViewModel"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:InitialValidation />
    </UserControl.DataContext>

    <UserControl.Resources>
        <viewModel:BoolToIntConverter x:Key="BoolToIntConverter" />
    </UserControl.Resources>

    <Grid>
        <materialDesign:Transitioner
            Margin="0,50,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            SelectedIndex="{Binding InitialValidationComplete, Converter={StaticResource BoolToIntConverter}}">

            <materialDesign:TransitionerSlide>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".2*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource ProductSans}"
                        FontSize="25"
                        Foreground="{DynamicResource FontColor}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow">
                        Validating Mod Archives
                    </TextBlock>

                    <!--  Progress UI  -->
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <materialDesign:ColorZone
                            Grid.Row="0"
                            Height="1"
                            Margin="0,15,0,15"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource FontColor}" />

                        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                            <Label HorizontalAlignment="Center">
                                <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Width="21"
                                        Height="Auto"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource FontColor}"
                                        Kind="Check" />
                                    <Label
                                        Content="Building database"
                                        FontFamily="{StaticResource RobotoMono}"
                                        FontSize="14"
                                        Foreground="{DynamicResource FontColor}" />
                                </StackPanel>
                            </Label>

                            <Label HorizontalAlignment="Center">
                                <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                                    <!--<ProgressBar
                                Foreground="{DynamicResource FontColor}"
                                IsIndeterminate="True"
                                Style="{DynamicResource MaterialDesignCircularProgressBar}" />-->
                                    <materialDesign:PackIcon
                                        Width="21"
                                        Height="Auto"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource FontColor}"
                                        Kind="Check" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource RobotoMono}"
                                        FontSize="14"
                                        Foreground="{DynamicResource FontColor}">
                                        <Run Text="Found" />
                                        <Run Text="{Binding TotalSourceFileCount}" />
                                        <Run Text="potential matches" />

                                    </TextBlock>
                                </StackPanel>
                            </Label>
                        </StackPanel>

                        <materialDesign:ColorZone
                            Grid.Row="2"
                            Height="1"
                            Margin="0,15,0,15"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource FontColor}" />

                        <StackPanel Grid.Row="3" HorizontalAlignment="Center">
                            <TextBlock
                                FontFamily="{StaticResource RobotoMono}"
                                FontSize="14"
                                Foreground="{DynamicResource FontColor}"
                                Text="{Binding CurrentModName}"
                                TextAlignment="Center"
                                TextWrapping="WrapWithOverflow" />

                            <TextBlock
                                Margin="0,5,0,0"
                                FontFamily="{StaticResource RobotoMono}"
                                FontSize="12"
                                Foreground="{DynamicResource FontColor}"
                                Text="{Binding CurrentArchiveMd5}"
                                TextAlignment="Center"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>

                        <ProgressBar
                            Grid.Row="4"
                            Background="Transparent"
                            Foreground="{DynamicResource FontColor}"
                            IsIndeterminate="True"
                            Style="{DynamicResource MaterialDesignCircularProgressBar}" />

                    </Grid>
                </Grid>
            </materialDesign:TransitionerSlide>

            <materialDesign:TransitionerSlide>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>

        <!--  Initial Validation Control  -->

    </Grid>
</UserControl>
